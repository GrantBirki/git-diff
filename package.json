{
  "name": "git-diff-action",
  "version": "0.0.0",
  "private": true,
  "description": "A GitHub Action for gathering the git diff of a pull request in JSON format",
  "main": "lib/main.js",
  "scripts": {
    "format": "prettier --write '**/*.js'",
    "format-check": "prettier --check '**/*.js'",
    "lint": "eslint src/**/*.js",
    "package": "NODE_OPTIONS=--openssl-legacy-provider ncc build src/main.js -o dist --source-map --license licenses.txt",
    "test": "jest",
    "ci-test": "jest",
    "all": "npm run format && npm run lint && npm run package",
    "bundle": "npm run format && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GrantBirki/git-diff.git"
  },
  "keywords": [
    "actions",
    "git",
    "diff"
  ],
  "author": "Grant Birkinbine",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.0.1",
    "@babel/preset-env": "^7.17.10",
    "babel-core": "^6.26.3",
    "babel-jest": "^28.1.0",
    "dedent-js": "^1.0.1",
    "js-yaml": "^4.1.0",
    "make-coverage-badge": "^1.2.0",
    "parse-git-diff": "^0.0.6"
  },
  "jest": {
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 100
      }
    }
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.17.9",
    "@types/node": "^16.10.5",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^7.32.0",
    "eslint-plugin-jest": "^25.3.2",
    "jest": "^27.2.5",
    "prettier": "2.5.1"
  }
}
